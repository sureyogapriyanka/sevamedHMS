{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "rules": {
        // Reduce strictness to minimize issues checking
        "no-unused-vars": "off",
        "no-console": "off",
        "no-debugger": "off",
        "no-extra-semi": "off",
        "no-undef": "off",
        "react/jsx-no-undef": "off",
        "react/no-unescaped-entities": "off",
        "import/no-anonymous-default-export": "off"
    }
}